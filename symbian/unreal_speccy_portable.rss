    caption_and_icon =
    CAPTION_AND_ICON_INFO
        {
        caption         = STRING_app_caption_string;
        number_of_icons = 1;
        icon_file       = "\\resource\\apps\\unreal_speccy_portable.mif";
        };
    }
    
